{
  "name": "portfolio-showcase",
  "version": "1.0.0",
  "description": "ðŸš€ Portfolio web modern pentru dezvoltatori - Template responsiv pentru jocuri, aplicaÈ›ii blockchain, trading bots È™i landing pages",
  "main": "index.html",
  "homepage": "https://gzeu.github.io/portfolio-showcase",
  "repository": {
    "type": "git",
    "url": "https://github.com/Gzeu/portfolio-showcase.git"
  },
  "scripts": {
    "dev": "live-server --port=3000 --open=index.html --watch=.",
    "build": "npm run minify-css && npm run minify-js && npm run optimize-images",
    "minify-css": "cleancss -o dist/styles.min.css styles/main.css",
    "minify-js": "uglifyjs scripts/main.js -o dist/scripts.min.js -c -m",
    "optimize-images": "imagemin 'assets/images/**' --out-dir=dist/assets/images --plugin=webp --plugin=pngquant",
    "lighthouse": "lighthouse http://localhost:3000 --output=html --output-path=./reports/lighthouse-report.html",
    "deploy": "gh-pages -d . -m 'Deploy portfolio showcase'",
    "validate": "html5validator --root . --also-check-css --ignore-re='Attribute .* not allowed on element .* at this point.'",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "format": "prettier --write '**/*.{html,css,js,json,md}'",
    "format:check": "prettier --check '**/*.{html,css,js,json,md}'",
    "lint": "eslint scripts/**/*.js --fix",
    "lint:check": "eslint scripts/**/*.js",
    "start": "npm run dev",
    "clean": "rimraf dist reports",
    "analyze": "npm run lighthouse && npm run validate",
    "precommit": "npm run format && npm run lint",
    "prepare": "npm run clean && mkdir -p dist reports assets/images"
  },
  "keywords": [
    "portfolio",
    "showcase",
    "web-development",
    "blockchain",
    "multiversx",
    "smart-contracts",
    "games",
    "trading-bots",
    "ai-automation",
    "landing-pages",
    "responsive",
    "modern",
    "bucharest",
    "romania",
    "javascript",
    "css3",
    "html5"
  ],
  "author": {
    "name": "George Pricop",
    "email": "96602369+Gzeu@users.noreply.github.com",
    "url": "https://github.com/Gzeu"
  },
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=7.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11",
    "not op_mini all"
  ],
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "babel-jest": "^29.7.0",
    "clean-css-cli": "^5.6.2",
    "eslint": "^8.52.0",
    "eslint-config-prettier": "^9.0.0",
    "gh-pages": "^6.0.0",
    "html5validator": "^0.4.2",
    "imagemin": "^8.0.1",
    "imagemin-cli": "^7.0.0",
    "imagemin-pngquant": "^9.0.2",
    "imagemin-webp": "^7.0.0",
    "jest": "^29.7.0",
    "lighthouse": "^11.2.0",
    "live-server": "^1.2.2",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.5",
    "uglify-js": "^3.17.4"
  },
  "dependencies": {
    "intersection-observer": "^0.12.2",
    "web-vitals": "^3.5.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "collectCoverageFrom": [
      "scripts/**/*.js",
      "!scripts/**/*.min.js",
      "!**/node_modules/**"
    ],
    "coverageDirectory": "reports/coverage",
    "coverageReporters": ["html", "text", "lcov"]
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "printWidth": 100,
    "htmlWhitespaceSensitivity": "css",
    "endOfLine": "lf"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true,
      "node": true
    },
    "extends": ["eslint:recommended", "prettier"],
    "parserOptions": {
      "ecmaVersion": 2021,
      "sourceType": "module"
    },
    "rules": {
      "no-console": "warn",
      "no-unused-vars": "error",
      "prefer-const": "error",
      "no-var": "error"
    }
  },
  "config": {
    "port": 3000,
    "build_dir": "dist",
    "reports_dir": "reports"
  },
  "files": [
    "index.html",
    "styles/",
    "scripts/",
    "assets/",
    "LICENSE",
    "README.md"
  ]
}